        <!--<div class="title">邀请好友二维码</div>-->
        <!--<div class="qrcode-box">-->
            <!--<img src="/code/qrcode/<%= encodeURIComponent('http://' + window.location.host + '/invitation/scan/' + data.regCode.invitationCode) %>?eclevel=M&version=6&scale=4"-->
                 <!--alt=""/>-->
        <!--</div>-->
        <!--<div class="qrcode-btn">-->
            <!--<a id="invitationShare" class="u-btn u-radius u-btn-normal u-btn-submit u-btn-block">呼朋唤友</a>-->
        <!--</div>-->
    <!--</div>-->
    <div class="m-invitation-share">
        <div class="share"></div>
    </div>
</div>